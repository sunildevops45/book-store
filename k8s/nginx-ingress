# Ingress resource for the application
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: book-store
spec:
  ingressClassName: nginx
  rules:
  - host: sunilreddy.shop
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: bookstore-frontend-react-app-service
            port:
              number: 80

  - host: api.sunilreddy.shop
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: api-gateway-service
            port:
              number: 80
